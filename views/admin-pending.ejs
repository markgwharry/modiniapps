<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pending approvals · Modini Apps</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <style>
      .admin-table {
        width: 100%;
        border-collapse: collapse;
        margin: 2rem 0;
      }
      .admin-table th,
      .admin-table td {
        padding: 1rem;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }
      .admin-table th {
        background-color: #f4f4f4;
        font-weight: bold;
      }
      .admin-table .actions {
        display: flex;
        gap: 0.5rem;
      }
      .empty-state {
        margin: 2rem 0;
        padding: 2rem;
        background: rgba(0, 0, 0, 0.05);
        border-radius: 8px;
        text-align: center;
      }
      .app-access-form {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }
      .app-access-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
        gap: 0.35rem 0.75rem;
      }
      .app-access-list label {
        display: flex;
        gap: 0.35rem;
        align-items: center;
        font-size: 0.85rem;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="content-wrapper">
        <div class="header">
          <h1>Pending user approvals</h1>
          <p>Approve or reject new account requests</p>
          <div class="actions">
            <a href="/admin" class="button secondary">← Back to Admin</a>
            <a href="/" class="button secondary">Dashboard</a>
          </div>
        </div>

        <% if (users.length === 0) { %>
          <div class="empty-state">
            <p>No users waiting for approval right now.</p>
          </div>
        <% } else { %>
          <table class="admin-table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Job title</th>
                <th>Phone</th>
                <th>Requested</th>
                <th>App access on approval</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(user => { %>
                <tr>
                  <td><%= user.id %></td>
                  <td><%= user.fullName || '—' %></td>
                  <td><%= user.email %></td>
                  <td><%= user.jobTitle || '—' %></td>
                  <td><%= user.phone || '—' %></td>
                  <td><%= new Date(user.createdAt).toLocaleString() %></td>
                  <td>
                    <form class="app-access-form" method="POST" action="/admin/users/<%= user.id %>/approve">
                      <input type="hidden" name="redirectTo" value="/admin/pending" />
                      <div class="app-access-list">
                        <% allApps.forEach(app => { %>
                          <label>
                            <input type="checkbox" name="allowedApps" value="<%= app.slug %>" />
                            <span><%= app.name %></span>
                          </label>
                        <% }) %>
                      </div>
                      <button class="button" type="submit">Approve</button>
                    </form>
                  </td>
                  <td>
                    <div class="actions">
                      <form method="POST" action="/admin/users/<%= user.id %>/reject">
                        <button class="button secondary" type="submit">Reject</button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } %>
      </div>
    </div>
  </body>
</html>
