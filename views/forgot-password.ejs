<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forgot Password Â· Modini Apps</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="container">
      <div class="card">
        <div class="navbar">
          <div class="brand">
            <img src="/img/modiniLogo.png" alt="Modini" />
            <div class="brand-copy">
              <span class="eyebrow">Flight Operations Applications</span>
              <h1>Reset Your Password</h1>
              <p>Enter your email address and we'll send you a link to reset your password.</p>
            </div>
          </div>
          <div class="actions">
            <button class="theme-toggle" type="button" data-theme-toggle>
              Toggle theme
            </button>
          </div>
        </div>

        <% if (error) { %>
        <div class="alert"><%= error %></div>
        <% } %>

        <% if (success) { %>
        <div class="alert success"><%= success %></div>
        <% } %>

        <% if (!success) { %>
        <form method="POST" action="/forgot-password">
          <div>
            <label for="email">Email address</label>
            <input type="email" id="email" name="email" placeholder="you@example.com" required />
          </div>
          <button type="submit">Send reset link</button>
        </form>
        <% } %>

        <p>
          Remember your password?
          <a class="button secondary" href="/login">Back to sign in</a>
        </p>
      </div>
      <div class="badge-strip">
        <img src="/img/dartBadge.png" alt="DART accredited" />
        <img src="/img/dartBadge2.png" alt="DART secure badge" />
      </div>
      <p class="footer">
        Secure gateway for your private application suite.
      </p>
    </div>
    <script>
      const prefersLight = window.matchMedia('(prefers-color-scheme: light)').matches;
      const currentTheme = localStorage.getItem('theme');
      if (currentTheme === 'light' || (!currentTheme && prefersLight)) {
        document.body.classList.add('light');
      }
      document.querySelector('[data-theme-toggle]').addEventListener('click', () => {
        document.body.classList.toggle('light');
        const theme = document.body.classList.contains('light') ? 'light' : 'dark';
        localStorage.setItem('theme', theme);
      });
    </script>
  </body>
</html>
